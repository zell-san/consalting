.home
  display: flex;
  flex-wrap:wrap;

  &__item
    padding 120px 98px
    flex: 1 1 50%;
    min-height 1px

    @media screen and (max-width desktopWidth)
      flex-basis 100%
      padding 100px 40px

      @media screen and (max-width smallDesktopWidth)
        padding 80px 18px

    &-banner
      padding-top 75px
      padding-bottom 106.02px
      background-color #FFCC00
      background-image url(/static/img/general/promo-banner.png)
      background-size cover
      background-position: center;

      @media screen and (max-width smallDesktopWidth)
        padding-top 94px
        padding-bottom 94px

      &-descr
        max-width 382px
        margin-top 24px
        margin-bottom 60px

      &-block
        margin-top 154px

        @media screen and (max-width smallDesktopWidth)
          margin-top 0

    &-method
      @media screen and (max-width desktopWidth)
        flex-basis 50%

      &-title
        margin-bottom 24px
        max-width 584px

      &-descr
        max-width 481px
        font-family montserrat

    &-city
      background: linear-gradient(179.98deg, rgba(255, 255, 255, 0.33) -42.75%, rgba(41, 41, 41, 0.33) 92.11%), url(/static/img/content/city.png) no-repeat;
      background-size cover

      @media screen and (max-width desktopWidth)
        flex-basis 50%

        @media screen and (max-width tableWidth)
          display none

      &-media
        @extend .home__item-city
        display none
        height 500px
        margin auto -98px

        @media screen and (max-width tableWidth)
          display flex


    &-how
      &-title
        margin-bottom 112px

        @media screen and (max-width smallDesktopWidth)
          margin-bottom 50px

          @media screen and (max-width tableWidth)
            margin-bottom 28px

      &-teaser
        max-width 460px
        margin-bottom 24px

        @media screen and (max-width desktopWidth)
          max-width 720px

      &-descr
        max-width 430px
        margin-bottom 60px
        font-family montserrat

        @media screen and (max-width desktopWidth)
          max-width 550px

    &-consultation
      &-block
        @media screen and (max-width desktopWidth)
          display flex
          flex-wrap wrap

      &-title
        margin-bottom 49px

      &-box
        height 150px
        align-items center
        padding 0 47px
        border: 1px solid rgba(196, 196, 196, 0.7);

        @media screen and (max-width desktopWidth)
          flex-basis 50%
          height 238px

          @media screen and (max-width smallDesktopWidth)
            align-items start
            padding 37px 45px

            @media screen and (max-width tableWidth)
              flex-basis 100%
              padding 31px 28px

        & .box
          @media screen and (max-width smallDesktopWidth)
            flex-direction column



      &-subscrube
        margin-top 57px
        font-family montserrat

      &-teaser
        margin-bottom 10px

      &-descr
        font-family montserrat

    &-advantages
      padding-bottom 166px

      &-title
        margin-bottom 70px

      &-box
        flex-wrap wrap
        margin 0 -98px

        @media screen and (max-width desktopWidth)
          margin 0

      &-block
        flex-basis 33.33%
        padding: 40px 100px;
        border: 1px solid #f0f0f0;

        @media screen and (max-width desktopWidth)
          flex-basis 50%

          @media screen and (max-width tableWidth)
            padding 41px 32px
            flex-basis 100%

    &-communication
      display: flex;
      align-items: center;

      @media screen and (max-width smallDesktopWidth)
        background #000000
        color #ffffff
        padding-bottom 40px!important

    &-message
      @media screen and (max-width smallDesktopWidth)
        padding-top 0!important

      &-block
        @extend .home__item-consultation-block

      &-box
        @extend .home__item-consultation-box
        justify-content center
        align-items start

        @media screen and (max-width desktopWidth)
          flex-basis 33.33%

          @media screen and (max-width smallDesktopWidth)
            height 245px

            @media screen and (max-width tableWidth)
              flex-basis 100%

      &-teaser
        @extend .home__item-consultation-teaser

      &-descr
        max-width 405px
        font-family montserrat

    &-start
      &-block
        @extend .home__item-consultation-block

      &-title
        margin-bottom 59px

      &-box
        @extend .home__item-consultation-box
        border: 1px solid rgba(216, 173, 2, 0.7);

      &-descr
        max-width 260px

    &-profit
      &-title
        margin-bottom 123px

        @media screen and (max-width smallDesktopWidth)
          margin-bottom 46px

        @media screen and (max-width tableWidth)
          margin-bottom 27px

      &-block
        @media screen and (max-width smallDesktopWidth)
          display flex

          @media screen and (max-width tableWidth)
            flex-direction column

      &-teaser
        margin-bottom 33px

        @media screen and (max-width smallDesktopWidth)
          margin-right 50px

      &-descr
        margin-bottom 49px
        max-width 420px

      &-box
        align-items center

      &-info
        margin-left 25px
        max-width 160px

        @media screen and (max-width smallDesktopWidth)
          font-size 14px



